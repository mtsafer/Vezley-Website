<% if @subject.class == Subject::ActiveRecord_Relation %>	
	<% @subject.each do |s| %>
		<div class="info forum">
			<h1><%=s.name%></h1>
			<br>
			<% @forums.each do |post| %>
				<ul class="posts">
					<% if post.subject == s %>
						<div class="tool-buttons">
					<% if current_user && current_user.mod == 1 || current_user == post.user %>
								<% if current_user == post.user %>
						  		<%= link_to "Edit", "/forum/#{post.id}/edit", class: "btn btn-primary" %>
						  	<% end %>
					  		<% if current_user && current_user.mod == 1 %>
							  	<%= link_to "Sticky", sticky_comment_path(post.id,1), method: :patch, class: "btn btn-success" %>
							  	<%= link_to "Unsticky", sticky_comment_path(post.id,0), method: :patch, class: "btn btn-warning" %>
							  	<%= link_to "Move", move_path(post.id), class: "btn btn-success" %>
							  	<%= link_to "Close", close_comment_path(post.id,1), method: :patch, class: "btn btn-warning" %>
							  	<%= link_to "Open", close_comment_path(post.id,0), method: :patch, class: "btn btn-success" %>
							  <% end %>
							  <%= link_to "Delete", post_path(@subject.name,post.id), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger" %>
					  	<% end %>
			  </div>
				<a class="post-link" href="<%="#{@subject.name}/#{post.id}"%>">
					<li class="post">
						<div class="row">
							<div class="row-height">
								<div class="col-md-6 col-sm-4 col-height user-info side-info">
									<div class="inside">
										<div class="content">
											
											<p class="icons">
										  	<% if post.sticky == 1 %>
										  		<span class="glyphicon glyphicon glyphicon-pushpin"> </span>
										  	<% end %>
										  	<% if post.closed == 1 %>
										  		<span class="glyphicon glyphicon-lock"> </span>
										  	<% end %>
										  </p>
										  <p class="title">
										  	<%=post.title%>
										  </p>
										</div>
									</div>
								</div>
								<div class="col-md-4 col-sm-6 col-height center-info">
									<div class="inside">
										<div class="content">
										<div class="stats">
											<p><%= post.user.name %></p>
											<p>Posted: <%= post.created_at.strftime("%-m/%-e/%-y") %></p>
											<% recent = post %>
											<% post.comments.each do |c| %>
												<% recent = c if c.updated_at > recent.updated_at %>
											<% end %>
											<p>Recent Activity: <%= recent.updated_at.strftime("%-m/%-e/%-y") %></p>
										</div>
										</div>
									</div>
								</div>
								<div class="col-md-2 col-height side-info">
									<div class="inside">
										<div class="content">
					
										<p>Comments: <%= post.comments.count %></p>
										</div>
									</div>
								</div>
							</div>
						</div>
					</li>
				</a>
					<% end %>
				</ul>
			<% end %>
			<%= link_to "Start a Thread", "#{s.name}/new", class: "btn btn-success"  %>
		</div>
	<% end %>
