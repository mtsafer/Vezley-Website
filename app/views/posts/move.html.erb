<div class="info move-post">
	<p></p>
	<h1>Move Thread</h1>
	<br>
	<div class="container-fluid">
    <div class="col-md-6 col-md-offset-3">
			<%= form_for @post, url: move_path(@post.id) do |f| %>
				<%= select("post", "subject", @subjects.collect {|s| [ s.name ] }) %>
			  <%= f.submit "Move", class: "btn btn-success" %>
			  <%= link_to "Back", "/forum/all", class: "btn btn-primary" %>
			<% end %>
		</div>
	</div>
</div>