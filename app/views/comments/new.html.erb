<div class="info new-comment">
	<p></p>
	<h1>New Comment</h1>
	<br>
	<div class="container-fluid">
    <div class="col-md-6 col-md-offset-3">
			<%= form_for @comment, url: new_comment_path do |f| %>
				<%= render 'shared/error_messages_comments' %>

			  <%= f.label :comment %>
			  <%= f.text_area :body, class: 'form-control' %>

			  <%= f.submit "Comment", class: "btn btn-success" %>
			  <%= link_to "Back", "/forum/#{@subject}/#{@id}", class: "btn btn-primary" %>
			<% end %>
		</div>
	</div>
</div>